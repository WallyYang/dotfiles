" General {{{
set nocompatible
set nobackup
set noswapfile
set history=1024
set autochdir
set clipboard+=unnamed
set winaltkeys=no
set backspace=2
" }}}

" Lang & Encoding {{{
set langmenu=en_US
let $lang = 'en_US.UTF-8'
" }}}

" GUI {{{
set cursorline
set hlsearch
set number
set showmode
set ruler
set splitbelow
set splitright
set guioptions-=e
set nolist
set guifont=Inconsolata:h11:cANSI
" }}}

" Format {{{
set smartindent
set smarttab
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
syntax on
" }}}

" Keymap {{{
"

" Eclim {{{
filetype plugin indent on
" }}}
